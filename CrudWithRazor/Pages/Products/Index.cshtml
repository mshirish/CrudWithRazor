@page
@model CrudWithRazor.Pages.Products.IndexModel
@{
	ViewData["Title"] = "Product List";
}

<h3>@ViewData["Title"]</h3>
<hr/>
<p>
	<a asp-page = "Create" class="btn btn-primary">Create</a>
</p>


<table class="table table-striped table-responsive table-hover shadow">
	<thead class="table-dark text-center">
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Products[0].Id)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Products[0].ProductName)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Products[0].Price)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Products[0].Quantity)
			</th>
			<th>
				Action
			</th>
		</tr>
	</thead>

	<tbody>
		@if (Model != null && Model.Products.Any())
		{
			@foreach (var product in Model.Products)
			{
				<tr class="text-center">
					<th>
						@Html.DisplayFor(item => product.Id)
					</th>
					<th>
						@Html.DisplayFor(item => product.ProductName)
					</th>
					<th>
						@Html.DisplayFor(item => product.Price)
					</th>
					<th>
						@Html.DisplayFor(item => product.Quantity)
					</th>
					<th>
						<a asp-page = "./Edit" asp-route-itemid="@product.Id" class="btn btn-primary">Edit</a>
						<a asp-page = "./Details" asp-route-itemid="@product.Id" class="btn btn-success">Details</a>
						<a asp-page = "./Delete" asp-route-itemid="@product.Id" class="btn btn-danger">Delete</a>
					</th>
				</tr>

			}
		}
		else
		{
		<tr>
			<td colspan = "5" class = "text-center">
				Products not available at the moment!
			</td>
		</tr>	
		}
	</tbody>
	
</table>


